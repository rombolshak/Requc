<UserControl x:Class="Requc.Views.SimpleProtocolView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:view="clr-namespace:Requc.Views"
             mc:Ignorable="d" 
      d:DesignHeight="200" d:DesignWidth="500">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="100" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="180" />
            <RowDefinition Height="25" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <ContentPresenter Content="{Binding Path=ProtocolAct}" Grid.Column="0" Grid.Row="0"/>
        <StackPanel Grid.Column="1" Grid.Row="0">
            <Button Height="100" Command="{Binding Path=RunCommand}" CommandParameter="{Binding Path=ProtocolAct}">Run</Button>
        </StackPanel>

        <Grid ShowGridLines="True" Grid.Row="1" Height="20" Margin="0 0 0 0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition/>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="20" />
            </Grid.RowDefinitions>
            <TextBlock Text="Значение Алисы" Grid.Column="0" Grid.Row="0" HorizontalAlignment="Center" />
            <TextBlock Text="Фаза Алисы" Grid.Column="1" Grid.Row="0" HorizontalAlignment="Center" />
            <TextBlock Text="Фаза Боба" Grid.Column="2" Grid.Row="0" HorizontalAlignment="Center" />
            <TextBlock Text="Значение Боба" Grid.Column="3" Grid.Row="0" HorizontalAlignment="Center" />
        </Grid>
        <ItemsControl Grid.Column="0" Grid.Row="2" ItemsSource="{Binding Path=TransmissionItems}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <view:TransmissionItemView DataContext="{Binding}" />
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>
</UserControl>
